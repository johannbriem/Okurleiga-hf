        <TextBox Grid.Column="2" Margin="156,139,634,-57" VerticalAlignment="Center" Height="24" Text="{Binding Address}"/>
        <materialDesign:PackIcon Kind="City" VerticalAlignment="Center" Margin="19,177,0,-87" Grid.Column="2"/>
