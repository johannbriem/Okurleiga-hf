        <TextBox Grid.Column="2" Margin="156,197,634,-115" VerticalAlignment="Center" Height="24" Text="{Binding Zip}"/>
        <materialDesign:PackIcon Kind="Phone" VerticalAlignment="Center" Margin="19,235,0,-145" Grid.Column="2"/>
